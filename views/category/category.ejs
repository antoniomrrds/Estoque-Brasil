<%- include('../partials/header')-%>
  <%- include('../partials/navbar')-%>

  <% if (errorCategory) { %>
    <div id="erro" class="d-flex w-100  justify-content-center  align-items-center my-5">
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <strong> 
        <%= errorCategory %> </strong> 
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    </div>


  <% } %>




  
    <div class="d-flex  justify-content-center  align-items-center my-5">
 
      <div class="card w-auto ">
        <h5 class="card-header bg-primary text-white fs-3">Lista de Categorias </h5>
        <div class="card-body mb-5">
          <div class="d-flex  justify-content-center  align-items-center">
            <div class="tab-content w-auto" my-2" id="ex-with-icons-content">
              <div class="tab-pane fade show active" id="ex-with-icons-tabs-1" role="tabpanel"
                aria-labelledby="ex-with-icons-tab-1">
                <table class="table align-middle mb-0 bg-white">
                  <thead class="bg-light">
                    <tr class="text-bolder-category">
                      <th>N°</th>
                      <th>Categoria</th>
                      <th class="text-center">Ações</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if(category !=0){ %>
                      <% category.map((category ,index)=>{%>
                        <tr class="table-text">
                          <td>
                            <div class="d-flex align-items-center">
                              <div >
                                <p class="fw-bold mb-1 ">
                                  <%= index+1%>
                                </p>
                              </div>
                            </div>
                          </td>

                          <td>
                            <div class="d-flex align-items-center">
                              <div class="ms-3">
                                <p class="fw-bold mb-1">
                                  <%= category.name%>
                                </p>
                              </div>
                            </div>
                          </td>
                          <td>




                            <form action="/category/delete" method="post" class="d-inline d-flex justify-content-center me-2">
                              <input type="hidden" name="id" value="<%= category.id %>">

                              <a href="/category/<%= category.id %>" class="btn btn-warning ms-2"> <i
                                  class="fas fa-edit"></i></a>

                              <button class="btn btn-danger ms-3" style="background:red"> <i
                                  class="fas fa-trash-alt"></i></i></button>
                            </form>
                          </td>
                        </tr>
                        <% }); %>
                          <% }%>
                  </tbody>
                </table>




                <% if (category==0 ) { %>
                  <span class="spanError  d-flex  justify-content-center my-5">
                    <%= err %>
                  </span>


                  <% }%>
              </div>
            </div>
          </div>
          <%- include('../partials/footer')-%>
